# Telegram API credentials (get from my.telegram.org)
TG_API_ID=13867088
TG_API_HASH=your_hash_here
TG_SESSION=your_session_string_here  # Generate on first run

# Transcription config (default: local mode)
WHISPER_MODE=local  # local, api, deepgram
WHISPER_MODEL_SIZE=base  # base, small, medium, large-v2
WHISPER_MODEL_DIR=/app/models  # Path to models dir (for Docker: ./models on host)

# For api mode
WHISPER_API_KEY=your_whisper_api_key_here

# For deepgram mode
DEEPGRAM_KEY=your_deepgram_key_here

# Optional: DEV_MODE=true for sending timings in production
DEV_MODE=false