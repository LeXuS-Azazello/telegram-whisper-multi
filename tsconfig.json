{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "src/types/whisper-node.d.ts",
    "src/types/input.d.ts"
  ],

  "exclude": ["node_modules", "dist"]
}
